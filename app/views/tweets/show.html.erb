
<div class="container app">
<div class="row">
<div class="col-lg-12">


<div class="well tweet text-center">

<h4><%= link_to @tweet.user, @tweet.user %></h4>
<%= image_tag @tweet.image(:large), class: "img-thumbnail img-responsive" %>
<h1><%= @tweet %></h1>

<!--
<%= link_to t('.back', :default => t("helpers.links.back")), tweets_path, :class => 'btn btn-default'  %>
-->

<% if @tweet.user == current_user %> 

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tweet_path(@tweet), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tweet_path(@tweet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>

<div class="row">

<% if @tweet.comments.present? %>
<h3>Comments:</h3>
<%= render partial: 'tweets/comment', collection: @tweet.comments %>
</div>
<% end %>

<%= render partial: 'comments/form' if user_signed_in? %>


</div>


</div>
</div>
</div>
